@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model CoinSaver.Models.AccountViewModels.LoginVM

@{
    ViewData["Title"] = "Вход";
}

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-signin">
                <h2>@ViewData["Title"]</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Username" placeholder="@Html.DisplayNameFor(m => m.Username)" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
                <input asp-for="Password" placeholder="@Html.DisplayNameFor(m => m.Password)" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input hidden asp-for="RememberMe" value="true" />
                <button type="submit" class="btn btn-lg btn-primary btn-block">Вход</button>
            </form>
            <form asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="get" class="form-signin">
            <button type="submit" class="btn btn-lg btn-primary btn-block">Регистрация</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

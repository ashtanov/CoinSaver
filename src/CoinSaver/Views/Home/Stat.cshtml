@model CoinSaver.Models.StatVM
@{
    ViewData["Title"] = "Статистика";
}
<div class="page-header">
    <div class="panel panel-default row">
        <div class="panel-heading">
            <h3 class="panel-title">Общие траты для @Model.Name</h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive ">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>Всего потрачено:</td>
                            <td>@Model.TotalSpend</td>
                        </tr>
                        <tr>
                            <td>Общее количество покупок:</td>
                            <td>@Model.TotalPurchases</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Категория</th>
                <th>Покупок</th>
                <th>Потрачено</th>
            </tr>
            @foreach (var kvp in Model.PurchasesByCategory)
            {

                <tr style="background-color: @kvp.Key.EnumColorFor()">
                    <td>@kvp.Key.EnumDisplayNameFor()</td>
                    <td>@kvp.Value.Count</td>
                    <td>@kvp.Value.Summ</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="progress">
    @foreach (var p in Model.ProgressBarPercentage)
    {
        <div class="progress-bar" style="width: @p.Value%; background-color: @p.Key.EnumColorFor()"></div>
    }
</div>
<div class="table-hover">
    <table class="table table-condensed">
        <tbody>
            @foreach (var p in Model.ProgressBarPercentage)
            {
                <tr>
                    <td style="width:30px">@p.Key.EnumDisplayNameFor()</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" style="width: @p.Value%; background-color: @p.Key.EnumColorFor()"></div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
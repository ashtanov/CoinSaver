@model IEnumerable<CoinSaver.Models.CSUser>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Логин</th>
                <th>Имя</th>
                <th>Статистика</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.OrderBy(x => x.NormalizedUserName))
            {
            <tr>
                <td>@user.UserName</td>
                <td>@user.RealName</td>
                <td><a class="btn btn-default" href="/Home/UserStat?username=@user.UserName"></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
